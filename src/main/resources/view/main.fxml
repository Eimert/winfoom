<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="100.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.kpax.winfoom.view.MainController">
    <top>
        <MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#close" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#about" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <bottom>
        <HBox fx:id="buttonsBox" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="startBtn" alignment="CENTER" mnemonicParsing="false" onAction="#start" text="Start"
                        BorderPane.alignment="CENTER"/>
                <Button fx:id="stopBtn" mnemonicParsing="false" text="Stop"  onAction="#stop"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </bottom>
    <center>
        <VBox fx:id="centerBox">
            <children>
                <HBox minWidth="200.0" prefHeight="50.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label minWidth="100.0" text="Proxy host:*">
                            <HBox.margin>
                                <Insets top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="proxyHost" HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <HBox minWidth="200.0" prefHeight="50.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label minWidth="100.0" text="Proxy port:*">
                            <HBox.margin>
                                <Insets top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="proxyPort" HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <HBox minWidth="200.0" prefHeight="50.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label minWidth="100.0" text="Local proxy port:*">
                            <HBox.margin>
                                <Insets top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="localProxyPort" HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <HBox minWidth="200.0" prefHeight="50.0" prefWidth="200.0" spacing="5.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label minWidth="100.0" text="Test URL:*">
                            <HBox.margin>
                                <Insets top="5.0"/>
                            </HBox.margin>
                        </Label>
                        <TextField fx:id="testUrl" HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="0.0"/>
                    </padding>
                </HBox>
                <Separator prefWidth="200.0"/>
            </children>
        </VBox>
    </center>
</BorderPane>
